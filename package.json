{
  "name": "opennova",
  "version": "0.2.0",
  "description": "AI agent daemon powered by Claude",
  "type": "module",
  "main": "dist/daemon/index.js",
  "bin": {
    "nova": "dist/daemon/cli.js"
  },
  "files": [
    "dist",
    "workspace-template",
    "web/tasklist/dist"
  ],
  "imports": {
    "#core/*": "./dist/core/*",
    "#daemon/*": "./dist/daemon/*",
    "#tui/*": "./dist/tui/*",
    "#tasklist/*": "./dist/tasklist/*"
  },
  "scripts": {
    "dev": "tsx watch src/daemon/cli.ts daemon",
    "build": "tsc && npm run build:tasklist",
    "build:tasklist": "cd web/tasklist && npm install && npm run build",
    "dev:tasklist": "cd web/tasklist && npm run dev",
    "start": "node dist/daemon/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "daemon",
    "telegram",
    "chatbot"
  ],
  "author": "Klaus Julin",
  "license": "MIT",
  "homepage": "https://github.com/kjulin/opennova",
  "bugs": "https://github.com/kjulin/opennova/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjulin/opennova.git"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.13",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.2.41",
    "@hono/node-server": "^1.19.9",
    "@inkjs/ui": "^2.0.0",
    "cron-parser": "^5.5.0",
    "grammy": "^1.39.3",
    "hono": "^4.11.9",
    "ink": "^6.6.0",
    "node-cron": "^4.2.1",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  }
}
