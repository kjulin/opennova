{
  "name": "opennova",
  "version": "0.2.0",
  "description": "AI agent daemon powered by Claude",
  "type": "module",
  "main": "dist/daemon/index.js",
  "bin": {
    "nova": "dist/daemon/cli.js"
  },
  "files": [
    "dist",
    "workspace-template"
  ],
  "imports": {
    "#core/*": "./dist/core/*",
    "#daemon/*": "./dist/daemon/*",
    "#tasks/*": "./dist/tasks/*",
    "#notes/*": "./dist/notes/*",
    "#api/*": "./dist/api/*",
    "#councils/*": "./dist/councils/*"
  },
  "scripts": {
    "dev": "tsx src/daemon/cli.ts daemon",
    "build": "tsc && npm run build:webapp && npm run build:console",
    "build:webapp": "cd web/tasks && npm install --ignore-scripts && npm run build && mkdir -p ../../dist/webapp && cp -r dist/* ../../dist/webapp/",
    "build:console": "cd web/console && npm install --ignore-scripts && npm run build && mkdir -p ../../dist/console && cp -r dist/* ../../dist/console/",
    "start": "node dist/daemon/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "daemon",
    "telegram",
    "chatbot"
  ],
  "author": "Klaus Julin",
  "license": "MIT",
  "homepage": "https://github.com/kjulin/opennova",
  "bugs": "https://github.com/kjulin/opennova/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjulin/opennova.git"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.2.41",
    "@hono/node-server": "^1.19.9",
    "@napi-rs/keyring": "^1.2.0",
    "cron-parser": "^5.5.0",
    "grammy": "^1.39.3",
    "hono": "^4.11.9",
    "node-cron": "^4.2.1",
    "onnxruntime-node": "^1.21.0",
    "zod": "^4.3.6"
  }
}
